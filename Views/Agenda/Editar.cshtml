@model  ECAP.Models.Agenda

@{
    ViewBag.Title = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/materialdesignicons.min.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />
<script type="text/javascript">
    $(document).ready(function () {

        $("#btnVoltar").button().click(function () {
            document.location = '@Url.Action("Index","Agenda")';
        });

    });

</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-wrapper">
        <div class="card">
            <div class="card-header">
                <h5>Editar Registro</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-xs-12 col-sm-4 col-md-3 col-lg-3 form-control-label">Nome</label>
                            <div class="col-sm-2 col-md-5 mb-3">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @autofocus = "autofocus" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xs-12 col-sm-4 col-md-3 col-lg-3 form-control-label">Telefone</label>
                            <div class="col-sm-2 col-md-2 mb-3">
                                @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", maxlength = "20", @autofocus = "autofocus" } })
                                @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-xs-12 col-sm-4 col-md-3 col-lg-3 form-control-label">Endereço</label>
                            <div class="col-sm-2 col-md-5 mb-3">
                                @Html.EditorFor(model => model.Endereco, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @autofocus = "autofocus" } })
                                @Html.ValidationMessageFor(model => model.Endereco, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row ">
                            <div class="col-xs-12 col-sm-6 col-md-8 col-lg-4 offset-md-3">
                                <button type="submit" class="btn btn-success" id="btnNovo"><i class="mdi mdi-content-save"></i>Salvar</button>
                                <button type="button" class="btn btn-primary" id="btnVoltar"><i class="mdi mdi-undo-variant"></i>Voltar</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}
